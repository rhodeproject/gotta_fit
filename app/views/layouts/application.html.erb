<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/cupertino/jquery-ui.css",
                          "application", :media => "all" %>
  <%= javascript_include_tag "application","http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/jquery-ui.min.js" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <!--Google Analytics Script Begin-->
  <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-31413530-2']);
      _gaq.push(['_setDomainName', 'gottafit.com']);
      _gaq.push(['_trackPageview']);

      (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  </script>
  <!--Google Analytics Script End-->
</head>
<body>
<%= render 'layouts/header' %>
<div class="container-fluid">
  <% flash.each do |key, value| %>

      <!--Alnernate way of displaying flash, this is less clean
      <div class="alert alert-<%= key %>"><%= value %></div>-->

      <%= content_tag(:div, value, id: "flash_message",class: "alert alert-#{key}") %>
  <% end %>
  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
<%= debug(params) if Rails.env.development? %>
</body>
</html>
