<%= provide(:title, 'Edit User') %>
<h1>Sign Up</h1>
<div class="row">
  <div class="span4 offset4">
    <%= form_for (@user) do |f| %>
        <%= render 'shared/errors', object: f.object %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.check_box :admin %> Admin?<br>

        <br>
        <%= f.submit "Update Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>