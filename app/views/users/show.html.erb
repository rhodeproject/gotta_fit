<% provide(:title, @user.first_name) %>
<div class="row-fluid">

      <h4>
       <%= @user.first_name %>
      </h4>
      <div class="row-fluid">
        Purchased Rides Remaining: <%= @user.purchased_rides %>
      </div>

  <% if @user.active? %>
      <div class="span8">
        <h4>upcoming rides</h4>
        <table class="table table-striped">
            <thead>
                <th>Day</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Total Spots</th>
                <th>Spots Available</th>
                <th>Waiting</th>
            </thead>
            <tbody>
                <% @rides.each do |slot| %>
                <tr>
                    <td><%= link_to showday(slot.date), slot%></td>
                    <td><%= showtime(slot.start_time)%></td>
                    <td><%= showtime(slot.end_time)%></td>
                    <td><%= slot.spots %></td>
                    <td><%= slot.available_spots %></td>
                    <td><%= slot.waiting %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </div>
  <%else%>
      <div class="span6">
        <div class="hero-unit">
       <h4>
         <p>You account is inactive, an email has bee sent
            to <%= @user.email %>. Follow the link in the email to active you account
         </p>
       </h4>
      </div>
      </div>
  <% end %>
</div>

