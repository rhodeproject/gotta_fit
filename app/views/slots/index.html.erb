<h1>Multi-rider sessions</h1>
<div class="container">
  <div class="span4 offset1">
    <%= link_to 'This Week', '/schedule/weekly' %> |
    <%= link_to 'This Month', '/schedule/monthly' %> |
    <%= link_to 'Today', '/schedule/daily' %> |
    <%= link_to 'All', '/schedule' %>
  </div>
    <div class="span10 offset1">
        <table class="table table-condensed table-bordered table-striped">
          <thead>
          <th>Day</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Available Spots</th>
          <th></th>
          </thead>
          <% @slots.each do |slot|%>
              <tr>
                <td><%= showday(slot.date)%></td>
                <td><%= slot.start_time%></td>
                <td><%= slot.end_time%></td>
                <td><%= spots_available(slot.id) %></td>
                <td><%= link_to 'View Details', slot, class: "btn btn-large btn-primary" %></td>
              </tr>
          <% end %>
        </table>
      <%=  %>
      <% if signed_in? && current_user.admin? %>
        <%=  link_to "Create New Session",new_slot_path ,class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
</div>


